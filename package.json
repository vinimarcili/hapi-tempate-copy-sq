{
  "name": "hapi-18-template",
  "version": "2021.0.0",
  "description": "API Hapi 18 template",
  "main": "index.js",
  "repository": "https://github.com/squidit/hapi-18-template.git",
  "author": "Engineering Squid Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.16.0"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "start": "ts-node dist/shared/infra/http/index.js",
    "prestart": "npm run build",
    "start:prod": "NODE_ENV=production tsnd -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/index.ts",
    "start:stg": "NODE_ENV=staging tsnd -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/index.ts",
    "start:local": "NODE_ENV=local tsnd -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/index.ts",
    "lint": "node_modules/.bin/eslint src/**/*.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files && cp ./ormconfig.js dist/"
  },
  "pre-push": [
    "lint"
  ],
  "private": true,
  "dependencies": {
    "boom": "^7.2.0",
    "dotenv": "^5.0.1",
    "elastic-apm-node": "^3.17.0",
    "felicity-status": "git+https://github.com/squidit/felicity-status.git",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "got": "^11.8.2",
    "hapi": "^18.1.0",
    "hapi-auth-jwt2": "^8.1.0",
    "inert": "^5.1.0",
    "ioredis": "^4.28.3",
    "joi": "^13.7.0",
    "lout": "^11.0.1",
    "mongodb": "3.5.7",
    "reflect-metadata": "^0.1.13",
    "sq-winston": "github:squidit/sq-winston",
    "sugar-env": "^1.5.14",
    "ts-node-dev": "^1.1.6",
    "tsyringe": "^4.4.0",
    "typeorm": "^0.2.41",
    "typescript-require": "^0.3.0",
    "vision": "^5.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/boom": "^7.3.1",
    "@types/dotenv": "^8.2.0",
    "@types/got": "^9.6.11",
    "@types/hapi": "^18.0.7",
    "@types/hapi__hapi": "^20.0.10",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__joi": "^17.1.8",
    "@types/hapi__vision": "^5.5.3",
    "@types/ioredis": "^4.28.7",
    "@types/jest": "^27.4.0",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.161",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^14.18.5",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^7.9.0",
    "hapi-swagger": "^9.4.2",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2",
    "ts-lint": "^4.5.1",
    "tsconfig-paths": "^3.13.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
